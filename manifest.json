{
    "manifest_version": 3,
    "name": "Tabetha Weaver",
    "version": "1.0.0",
    "description": "Your browser's AI assistant for tabs, writing, and content",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs",
        "tabGroups",
        "unlimitedStorage",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}